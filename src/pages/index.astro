			// Initialize Three.js Solar System
			const canvas = document.getElementById(
				"three-canvas",
			) as HTMLCanvasElement;
			if (canvas) {
				const solarSystem = new SolarSystem(canvas);

				// Initialize smooth scroll with solar system
				const { lenis } = initSmoothScroll(solarSystem);

				// Smooth scroll for navigation links
				document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
					anchor.addEventListener("click", function (e) {
						e.preventDefault();
						const href = (this as HTMLAnchorElement).getAttribute(
							"href",
						);
						if (href) {
							const target = document.querySelector(href);
							if (target) {
								lenis.scrollTo(target as HTMLElement);
							}
						}
					});
				});

				// Navbar scroll effect
				const navbar = document.getElementById("navbar");
				if (navbar) {
					window.addEventListener("scroll", () => {
						if (window.scrollY > 100) {
							navbar.style.background = "rgba(10, 14, 39, 0.95)";
						} else {
							navbar.style.background = "transparent";
						}
					});
				}
